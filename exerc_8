range(0:5) #intervalo entre 0 e 5 ou seja {0, 1, 2, 3, 4} ou seja quantas vezes quero repetir
for conta in range (0:5):
    valor = int(input("Insira um valor:"))
    soma = soma + valor
media = soma / 5
